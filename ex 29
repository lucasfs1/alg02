#include <math.h>
#include <stdio.h>
#include <stdlib.h>
#include <iostream>
#include <conio.h>

int main()

        {
          int x,y,z;
          printf("Informe o lado do triangulo referente a letra x: ");
          scanf("%i",&x);
          printf("Informe o lado do triangulo referente a letra y: ");
          scanf("%i",&y);
          printf("Informe o lado do triangulo referente a letra z: ");
          scanf("%i",&z);


           if ((x==0) || (y==0) ||(z==0) || (x >= y + z) || (y >= x + z) || (z >= x + y))
           {
            printf("\nIncapaz de formar um triangulo\n");
           }

             else if((x==y) && (x==z) )
            {
            printf("\ntriangulo equilatero\n");
            }


              else if ((x==y) || (y==z) || (x==z))
              {
              printf("\ntriangulo isosceles\n");	
              }

                else if((x!=y) && (y!=z) && (x!=z))
                {
                printf("\ntriangulo escaleno\n");	
                }  



          system("pause");
          return 0;
          }	
