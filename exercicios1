exercicio 18
int main() {
    int c, x, y;

    printf("\nDigite um valor entre 2 e 20: ");
    scanf("%d", &x);

    for (c=1; c<=x; c++) {
        for (y=1; y<=c; y++)
            printf("%d", y);
        printf("\n");
    }

    for (c=c-2; c>0; c--) {
        for (y=1; y<=c; y++)
            printf("%d", y);
        printf("\n");
    }

    printf("\n");
    return 0;
}
