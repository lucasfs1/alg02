	exercicio 13
int main()
{
	int inteiro;
	printf_s("Informe um numero inteiro:\n");
	scanf_s("%i", &inteiro);
	for (int i = 0; i < inteiro; i++)
	{
		printf_s("%i", i * 2 + 1);



	}
	printf_s("\n");
	system("pause");
	return 0;
}
exercicio 15
int main()
{
	int x,n,calculo,i,b;
	printf_s("Informe um numero inteiro para x:\n");
	scanf_s("%i", &x);
	printf_s("Informe um numero inteiro para n:\n");
	scanf_s("%i", &n);
	for (i = 0; i < n - 1; i++)
	{
		x = x * x;
	}
	
	printf_s("%i", x);
	printf_s("\n");


	system("pause");
	return 0;
}
